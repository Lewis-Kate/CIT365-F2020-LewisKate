@page
@model MyScriptureJournal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Index";
}

    <h1>My Scripture Journal</h1>

    <p>
        <a asp-page="Create">Create New Entry</a>
    </p>

    <form>
        <p>
            <select asp-for="BookNames" asp-items="Model.GetBookSelectList()">
                <option value="">All</option>
            </select>
            Keyword: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort"
                       asp-route-currentFilter="@Model.CurrentFilter">
                        <label class="control-label"> @Html.DisplayNameFor(model => model.Scripture[0].Book)</label>
</a>
                </th>
                <th>
                    <label class="control-label"> @Html.DisplayNameFor(model => model.Scripture[0].Chapter)</label>
</th>
                <th>
                    <label class="control-label">@Html.DisplayNameFor(model => model.Scripture[0].Verse)</label>
</th>
                <th>
                    <label class="control-label"> @Html.DisplayNameFor(model => model.Scripture[0].Note)</label>
</th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort"
                       asp-route-currentFilter="@Model.CurrentFilter">
                        <label class="control-label">  @Html.DisplayNameFor(model => model.Scripture[0].DateAdded)</label>
</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Scripture)
            {
                <tr>
                    <td>
                        <label class="control-label">@Html.DisplayFor(modelItem => item.Book)</label>
</td>
                    <td>
                        <label class="control-label">  @Html.DisplayFor(modelItem => item.Chapter)</label>
</td>
                    <td>
                        <label class="control-label"> @Html.DisplayFor(modelItem => item.Verse)</label>
</td>
                    <td>
                        <label class="control-label">   @Html.DisplayFor(modelItem => item.Note)</label>
</td>
                    <td>
                        <label class="control-label"> @Html.DisplayFor(modelItem => item.DateAdded)</label>
</td>
                    <td>
                       <label class="control-label"> <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |</label>
                       <label class="control-label"> <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |</label>
                        <label class="control-label"><a asp-page="./Delete" asp-route-id="@item.ID">Delete</a></label>
                    </td>
                </tr>
            }
        </tbody>
    </table>
